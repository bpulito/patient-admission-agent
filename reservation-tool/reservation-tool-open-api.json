{
    "openapi": "3.0.0",
    "info": {
        "title": "Hospital Bed Reservation API",
        "version": "1.0.0",
        "description": "API for managing hospital bed reservations."
    },
    "servers": [
        {
            "url": "https://reservation-system.13i6qeudn7sc.us-east.codeengine.appdomain.cloud"
        }
    ],
    "paths": {
        "/check_availability": {
            "get": {
                "operationId": "check_availability_tool",
                "summary": "Check bed availability for a given start date and length of stay.",
                "description": "Check bed availability for a given start date and length of stay.",
                "parameters": [
                    {
                        "name": "start_date",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        },
                        "description": "Start date of the availability check in the format YYYY-MM-DD."
                    },
                    {
                        "name": "length_of_stay",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Number of days to check for availability. Starting at ther start_date."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of available beds.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid API key."
                    }
                },
                "security": [
                    {
                        "api_key": ["X-API-KEY"]
                    }
                ]
            }
        },
        "/reservation": {
            "post": {
                "operationId": "reserve_bed_tool",
                "description": "Reserve a bed for the given start date and length of stay.",
                "summary": "Reserve a bed for the given start date and length of stay.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "start_date": {
                                        "type": "string",
                                        "format": "date",
                                        "description": "Start date of the reservation."

                                    },
                                    "length_of_stay": {
                                        "type": "integer",
                                        "description": "Number of days to reserver a bed."
                                    },
                                    "patient_id": {
                                        "type": "string",
                                        "description": "ID of patient associated with the reservation."
                                    },
                                    "first_name": {
                                        "type": "string",
                                        "description": "First name of the patient associated with the reservation."
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "description": "Last name of the patient associated with the reservation."
                                    }
                                },
                                "required": [
                                    "start_date",
                                    "length_of_stay",
                                    "patient_id",
                                    "first_name",
                                    "last_name"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Reservation successful.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "description": "Response message associated with the reservation request."
                                        },
                                        "bed_id": {
                                            "type": "string",
                                            "description": "The bed_id associated with the reservation."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid API key."
                    }
                },
                "security": [
                    {
                        "api_key": ["X-API-KEY"]
                    }
                ]
            }
        },
        "/reservation/{patient_id}": {
            "get": {
                "operationId": "get_reservation_tool",
                "description": "Get all reservation documents for a specific patient ID.",
                "summary": "Get all reservation documents for a specific patient ID.",
                "parameters": [
                    {
                        "name": "patient_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The ID of the patient whose reservations are to be retrieved."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of reservation documents for the given patient_id.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Reservation"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid API key."
                    }
                },
                "security": [
                    {
                        "api_key": ["X-API-KEY"]
                    }
                ]
            },
            "delete": {
                "operationId": "delete_reservation_tool",
                "description": "Cancel all reservations for a specific patient ID.",
                "summary": "Cancel all reservations for a specific patient ID.",
                "parameters": [
                    {
                        "name": "patient_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The ID of the patient whose reservations are to be cancelled."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Reservation(s) cancelled successfully.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid API key."
                    },
                    "404": {
                        "description": "No reservations found for this patient."
                    }
                },
                "security": [
                    {
                        "api_key": ["X-API-KEY"]
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "api_key": {
                "type": "apiKey",
                "name": "apikey",
                "in": "header"
            }
        },
        "schemas": {
            "Reservation": {
                "type": "object",
                "properties": {
                    "patient_id": {
                        "type": "string"
                    },
                    "first_name": {
                        "type": "string"
                    },
                    "last_name": {
                        "type": "string"
                    },
                    "reservation_date": {
                        "type": "string",
                        "format": "date"
                    },
                    "bed_id": {
                        "type": "string"
                    }
                }
            }
        }
    }
}